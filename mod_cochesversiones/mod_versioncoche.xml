	<authorUrl>ayuda.solucionesvigo.es</authorUrl>
	<version>1.0.</version>
	<description>MOD_VERSIONCOCHE_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_versioncoche">mod_versioncoche.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>mod_versioncoche.xml</filename>
        <filename>roe.js</filename>

